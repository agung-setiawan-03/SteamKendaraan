@model SteamKendaraan.Models.Pelanggan

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pelanggan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nama" class="control-label"></label>
                <input asp-for="Nama" class="form-control" />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_Layanan" class="control-label"></label>
                <input asp-for="ID_Layanan" class="form-control" />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plat_nomor" class="control-label"></label>
                <input asp-for="Plat_nomor" class="form-control" />
                <span asp-validation-for="Plat_nomor" class="text-danger"></span>
            </div>
            <div class="form-group" style=" float:right; margin-top:10px">
                <input type="submit" value="Save" class="btn btn-primary rounded-0" />
                <a href="@Url.Action("Index", "Pelanggan")" class="btn btn-md btn-primary rounded-0"><i class="fa-solid fa-backward"></i> Back to list</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
